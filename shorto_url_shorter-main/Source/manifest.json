{
    "name": "Shorto - URL Shorter",
    "version": "0.1",
    "description": "Create a small URL",
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab"
    ],
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "windows": "Ctrl+Shift+S",
            "mac": "Command+Shift+S"
          }
        }
      }
}